<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center_horizontal|center_vertical"
    android:isScrollContainer="true"
    android:keepScreenOn="true"
    android:orientation="vertical"
    android:scrollIndicators="right"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbarStyle="outsideInset"
    android:scrollbars="vertical"
    android:textAlignment="center">

    <TextView
        android:id="@+id/textTitle"
        style="@android:style/Widget.DeviceDefault.Light.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/settings_title" />

    <Button
        android:id="@+id/button_complication_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/settings_button_complication_left"
        android:textAlignment="center" />

    <Button
        android:id="@+id/button_complication_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/settings_button_complication_right"
        android:textAlignment="center" />

    <Switch
        android:id="@+id/calendar_permission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/settings_calendar_permission" />

    <Switch
        android:id="@+id/hour_format_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="@string/settings_12_hour_format_switch" />

    <TextView
        android:id="@+id/text_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="clip_horizontal"
        android:text="@string/settings_weather_title"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/weather_api_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="@string/settings_weather_input_api_key_hint"
        android:hint="@string/settings_weather_input_api_key_hint"
        android:inputType="text" />

</LinearLayout>